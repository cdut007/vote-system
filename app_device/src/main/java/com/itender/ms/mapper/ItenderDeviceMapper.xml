<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itender.ms.mapper.ItenderDeviceMapper">
    <resultMap id="itenderDevice" type="com.itender.ms.domain.ItenderDevice">
    	<id column="id" javaType="String" property="id"></id>
        <result column="model" javaType="STRING" property="model"></result>
        <result column="name" javaType="STRING" property="name"></result>
        <result column="ip" javaType="STRING" property="ip"></result>
        <result column="port" javaType="STRING" property="port"></result>
        <result column="account" javaType="STRING" property="account"></result>
        <result column="password" javaType="STRING" property="password"></result>
        <result column="status" javaType="STRING" property="status"></result>
        <result column="maintenance_phone" javaType="STRING" property="maintenancePhone"></result>
		<result column="room_id" javaType="STRING" property="roomId"></result>
		<result column="room_name" javaType="STRING" property="roomName"></result>
		<result column="create_time" javaType="DATE" property="createTime"></result>

    </resultMap>

	<select id="selectByFilter"
			resultMap="itenderDevice">
		select * from itender_device device where
		<if test="keyword != null">
			 UPPER(CONCAT(device.name,device.model,device.account,device.room_name,device.maintenance_phone)) LIKE UPPER (CONCAT(CONCAT('%', #{keyword, jdbcType=VARCHAR}),'%')) ESCAPE '/'
		</if>
		ORDER BY create_time desc

	</select>


	 <select id="selectByDeviceId" parameterType="java.lang.String" resultMap="itenderDevice">
		SELECT 
			a.*
		FROM
		 itender_device a
		WHERE
			a.id= #{deviceId,jdbcType=VARCHAR}
    </select>

	<select id="selectByDeviceName" parameterType="java.lang.String" resultMap="itenderDevice">
		SELECT
		a.*
		FROM
		itender_device a
		WHERE
		a.id= #{deviceName,jdbcType=VARCHAR}
	</select>

    
    <update id="updateDevice" parameterType="com.itender.ms.domain.ItenderDevice">
    	UPDATE itender_device
    	<trim prefix="SET" suffixOverrides=",">
		  <if test="model != null">model=#{model},</if>
		  <if test="name != null">name=#{name},</if>
		  <if test="ip != null">ip=#{ip},</if>
		  <if test="port != null">port=#{port},</if>
		  <if test="account != null">account=#{account},</if>
		  <if test="password != null">password=#{password},</if>
		  <if test="status != null">status=#{status},</if>
		  <if test="maintenancePhone != null">maintenance_phone=#{maintenancePhone},</if>
		  <if test="roomId != null">room_id=#{roomId},</if>
			<if test="roomName != null">room_name=#{roomName},</if>
		</trim>
        WHERE id = #{id}
    </update>
</mapper>